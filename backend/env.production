# Production environment variables for Render deployment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Vector database settings
VECTOR_DB_PATH=/opt/render/project/src/chroma_db
LOCAL_BUCKET_DIR=/opt/render/project/src/rag-documents

# LLM settings (optional - can be left empty for local Ollama)
LLM_API_KEY=
LLM_BASE_URL=http://localhost:11434/api/generate
LLM_MODEL=llama3.2:3b

# CORS settings
CORS_ORIGINS=["https://rag-chatbot-frontend.onrender.com"]

# Memory optimization
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
